<div class="white-container mt-3">
  <p>What does the slang "<%= @word.original %>" means?</p>
</div>

<%= simple_form_for :quiz_thing, url: answer_quiz_path, method: :post do |f| %>
  <%= f.input :question, as: :hidden, input_html: { value: @word.original } %>
  <%= f.input :answer, as: :hidden %>
<% end %>

<div class="quiz-answers ml-3 mr-3">
  <% @all_answers.each do |answer| %>
    <div class="quiz-answer p-2 <%= 'correct' if answer == @true_answer %>" data-answer="<%= answer %>">
      <span data-answer="<%= answer %>"><%= answer %></span>
    </div>
  <% end %>
<button class="d-none" id="next_question">Next</button>
</div>



