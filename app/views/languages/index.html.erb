<h1>Explore a language</h1>

<ul class="button-list">
    <% @languages.each do |language| %>
    <li>
        <%= button_to(update_languages_user_languages_path(language_id: language.id), class: 'language-btn') do %>
        <%= language.name.capitalize()  %>

        <% end %>
    </li>
    <% end %>
</ul>
