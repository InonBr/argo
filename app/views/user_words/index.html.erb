  <div class="search-bar">
    <form action="<%=  user_words_path %>" class="form-inline padded mt-5 mr-3 ml-3">
      <div class="d-flex flex-grow-1">
      <input type="text" name='search' class="form-control mr-1 border-radius input-lg" placeholder="keywords...">

        <select name="language"  class="mr-1 form-control border-radius input-lg">
          <% @dropdown_languages.each do |language| %>

            <option value="<%= language.name %>" <%= 'selected' if params[:language] == language.name %> ><%= language.name %></option>
            <% end %>

        </select>
        <input type="submit" class="pill-button slim" value="Go">
      </div>
    </form>
  </div>

    <!-- <ul> -->
  <div class="search-page">
    <div class="list m-3">
      <% @user_words.each do |user_word| %>
        <div class="white-container mb-2 word-card d-flex justify-content-between" data-uw-id='<%= user_word.id %>'>
          <div class="left">
            <strong><%= user_word.word.original %> </strong>
            <p class="mt-1 text-left"><%= user_word.word.translation %></p>
          </div>
          <div class="right" >
            <%= symbol(user_word.word.language.name) %>
            <%= link_to user_word_path(user_word), method: :delete, remote: true, data: { confirm: 'Are you sure?' } do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



