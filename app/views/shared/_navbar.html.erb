<div class='navbar d-flex'>
  <div class="lateral-block-r">

    <% path = controller.class.to_s.downcase == "quizzescontroller"? '#' : url_for(:back) %>

     <%=  link_to(path) do %>
      <i class="fas fa-arrow-circle-left"></i>
    <% end %>

    <%= link_to user_words_path do %>
      <i class="fas fa-list-ul"></i>
    <% end %>

  </div>
    <div class="center-block">
      <%=
        user_words_list = UserLanguage.where(active: true, user: current_user)
        path = user_words_list.empty? ? '#' : user_language_path(user_words_list.first)
        link_to(path) do
          image_tag "awesome.png", alt: "awesome", class: "awesome-btn"
        end
      %>

    </div>
  <div class="lateral-block-l">

    <%= link_to(languages_path) do %>
      <i class="fas fa-flag"></i>
    <% end %>

    <%= link_to(profile_path) do %>
      <i class="fas fa-user-circle"></i>
    <% end %>

  </div>
</div>
